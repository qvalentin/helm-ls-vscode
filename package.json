{
  "name": "helm-ls",
  "displayName": "helm-ls",
  "description": "helm-ls language server extension",
  "version": "1.2.0",
  "license": "MIT",
  "publisher": "helm-ls",
  "repository": "https://github.com/qvalentin/helm-ls-vscode",
  "icon": "./images/helm-icon-color.png",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:helm"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Helm-ls",
      "properties": {
        "helm-ls.path": {
          "type": "string",
          "description": "The path to the helm-ls binary. If not set, the extension will search for the binary in the PATH.",
          "default": ""
        },
        "helm-ls.logLevel": {
          "type": "string",
          "description": "The log level to use when running helm-ls.",
          "default": "info"
        },
        "helm-ls.valuesFiles": {
          "type": "object",
          "description": "The values files to be used by helm-ls. Checkout the Readme of helm-ls for more information. Note that you must restart the language server or the editor to have the changes take effect.",
          "default": {
            "mainValuesFile": "values.yaml",
            "lintOverlayValuesFile": "values.lint.yaml",
            "additionalValuesFilesGlobPattern": "values*.yaml"
          }
        },
        "helm-ls.yamlls": {
          "type": "object",
          "description": "The yamlls config to pass to helm-ls. Checkout the Readme of helm-ls for more information. Note that you must restart the language server or the editor to have the changes take effect.",
          "default": {
            "enabled": true,
            "enabledForFilesGlob": "*.{yaml,yml}",
            "diagnosticsLimit": 50,
            "showDiagnosticsDirectly": false,
            "path": "yaml-language-server",
            "config": {
              "schemas": {},
              "completion": true,
              "hover": true
            }
          }
        }
      }
    }
  },
  "extensionDependencies": [
    "ms-kubernetes-tools.vscode-kubernetes-tools"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "release": "release-it"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.0.0",
    "release-it": "^17.2.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
