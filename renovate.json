{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "dev dependencies",
      "groupSlug": "dev-deps"
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "non-major dependencies",
      "groupSlug": "non-major-deps"
    },
    {
      "schedule": [
        "on the first day of the month"
      ],
      "matchPackageNames": [
        "!helm-ls"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^src/util/executable\\.ts$/"
      ],
      "matchStrings": [
        "const HELM_LS_VERSION = \"(?<currentValue>v[^\"]+)\";"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "mrjosh/helm-ls",
      "depNameTemplate": "helm-ls",
      "versioningTemplate": "semver"
    }
  ]
}
